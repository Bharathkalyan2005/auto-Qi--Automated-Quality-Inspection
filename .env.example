# AutoQI Environment Variables
# Copy to .env and fill in values

# Anthropic API (Claude) â€” enables AI analysis, defect descriptions, retrain suggestions
# Get key: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-key-here

# Dashboard (optional; default: http://localhost:8000)
API_URL=http://localhost:8000

# Database
DB_URL=postgresql+asyncpg://user:password@localhost:5432/autoqi
REDIS_URL=redis://localhost:6379/0

# MQTT Broker
MQTT_BROKER=localhost
MQTT_PORT=1883
MQTT_TRIGGER_TOPIC=/factory/line1/trigger
MQTT_RESULT_TOPIC=/factory/line1/result

# Camera
CAMERA_INDEX=0
CAMERA_FPS=10
CAMERA_IP=

# Inference
CONFIDENCE_THRESHOLD=0.85
MODEL_PATH=models/saved/yolov8_defect.pt

# Paths
DATA_RAW=data/raw
DATA_LABELED=data/labeled
DATA_AUGMENTED=data/augmented
